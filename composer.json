{
    "name": "solido/php-coding-standards",
    "description": "Coding standards metapackage for solido suite",
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "authors": [
        {
            "name": "Alessandro Chitolina",
            "email": "alekitto@gmail.com"
        },
        {
            "name": "Massimiliano Braglia",
            "email": "massimiliano.braglia@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "doctrine/coding-standard": "^9.0",
        "kcs/class-finder": "^0.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.23",
        "roave/security-advisories": "dev-master",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "thecodingmachine/phpstan-strict-rules": "^0.12.0",
        "thecodingmachine/safe": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "solido/dto-management": "*",
        "symfony/var-dumper": "*"
    },
    "autoload": {
        "psr-4": {
            "Solido\\CodingStandards\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "rules.neon"
            ]
        }
    },
    "archive": {
        "exclude": [ ".github", "tests", ".gitignore" ]
    },
    "config": {
        "sort-packages": true
    }
}
